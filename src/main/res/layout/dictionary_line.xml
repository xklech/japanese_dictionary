<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/paddingLeftSmall"
        android:layout_marginRight="@dimen/paddingLeftSmall"
        android:layout_marginTop="@dimen/paddingTopSmall"
        android:orientation="horizontal">

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@android:color/secondary_text_light"
            android:id="@+id/kanjidict_dictionary_dict"
            android:layout_gravity="right"
            android:textIsSelectable="true"
            android:layout_weight="4" />

        <TextView
            android:layout_height="wrap_content"
            android:id="@+id/kanjidict_dictionary_number"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textStyle="bold"
            android:textColor="@android:color/primary_text_light"
            android:textIsSelectable="true"
            android:layout_marginLeft="@dimen/paddingLeftSmall"
            android:layout_width="0dp"
            android:gravity="right"
            android:layout_weight="1" />
    </LinearLayout>
</LinearLayout>
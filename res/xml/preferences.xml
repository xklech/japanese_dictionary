<PreferenceScreen
        xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory
            android:title="@string/preferences_language_setting">


        <CheckBoxPreference
                android:key="language_english"
                android:title="@string/language_english"
                android:summary="@string/preferences_english"
                />
        <CheckBoxPreference
                android:key="language_french"
                android:title="@string/language_french"
                android:summary="@string/preferences_french"
                />
        <CheckBoxPreference
                android:key="language_dutch"
                android:title="@string/language_dutch"
                android:summary="@string/preferences_dutch"
                />
        <CheckBoxPreference
                android:key="language_german"
                android:title="@string/language_german"
                android:summary="@string/preferences_german"
                />
    </PreferenceCategory>
    <PreferenceCategory
            android:title="@string/preferences_search_setting">
        <CheckBoxPreference
                android:key="search_only_favorite"
                android:title="@string/preferences_search_common_title"
                android:summary="@string/preferences_search_common"
                />
        <CheckBoxPreference
            android:key="search_deinflected"
            android:title="@string/preferences_search_dictionary_form_title"
            android:summary="@string/preferences_search_dictionary_form"
            />

    </PreferenceCategory>
	<PreferenceCategory
	    android:title="@string/preferences_dictionary_info">
	 	
       <PreferenceScreen
           android:key="update_dictionary"
           android:title="@string/preferences_update_dictionary"
           android:summary="@string/preferences_dictionary_info"
            />
	 	
	</PreferenceCategory>

</PreferenceScreen>